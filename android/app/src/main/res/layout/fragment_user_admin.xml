<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户名"
        app:met_errorMessage="@string/tip_username_error"
        app:met_allowEmpty="false"
        app:met_regexp="@string/regex_password"
        android:textSize="15sp"
        app:met_clearButton="true"
        android:inputType="text"
        app:met_floatingLabel="normal" />
    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
        android:layout_marginTop="15dp"
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:hint="昵称"
        app:met_maxCharacters="10"
        app:met_allowEmpty="false"
        android:textSize="15sp"
        app:met_clearButton="true"
        android:inputType="text"
        app:met_floatingLabel="normal" />
    <RadioGroup
        android:id="@+id/rg_sex"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="22dp">
        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="15sp"/>
        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="15sp"/>
        <RadioButton
            android:id="@+id/rb_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保密"
            android:checked="true"
            android:textSize="15sp"/>
    </RadioGroup>
    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
        android:layout_marginTop="15dp"
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:hint="重置新密码,不输入则保留原密码"
        app:met_errorMessage="@string/tip_password_error"
        app:met_regexp="@string/regex_password"
        app:met_maxCharacters="10"
        android:textSize="15sp"
        app:met_clearButton="true"
        android:inputType="textPassword"
        app:met_floatingLabelText="@string/title_password"
        app:met_floatingLabel="normal" />
    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
        android:layout_marginTop="15dp"
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邮箱"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        app:met_clearButton="true"
        android:inputType="text"
        app:met_errorMessage="邮箱格式必须正确"
        app:met_floatingLabelText="邮箱"
        app:met_regexp="^[a-zA-Z0-9_-]+@[a-zA-Z0-9_-]+(\.[a-zA-Z0-9_-]+)+$"
        app:met_floatingLabel="normal" />
</LinearLayout>