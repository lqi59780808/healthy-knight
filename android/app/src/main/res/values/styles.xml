<resources>

    <!-- 拓展主题 theme. -->
    <style name="XUITheme" parent="XUIBaseTheme">
        <!--设置默认窗口的动画样式-->
        <item name="android:windowAnimationStyle">@style/WindowAnimStyle</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="XUITheme.Phone">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="xui_actionbar_height">@dimen/config_title</item>
    </style>

    <style name="AppTheme.Launch">
        <item name="xui_config_color_splash_bg">@color/xui_config_color_white</item>
        <item name="xui_config_app_logo_bottom">@dimen/xui_config_app_logo_bottom</item>
        <item name="xui_config_company_logo_bottom">@dimen/xui_config_company_logo_bottom</item>
        <item name="android:windowBackground">@drawable/xui_config_bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--窗体背景，这个背景能在第一时间显示, 避免启动时白屏，黑屏问题-->
    <style name="AppTheme.Launch.App">
        <!--注意修改图标-->
        <item name="xui_config_splash_app_logo">@drawable/ic_logo_top</item>
        <item name="xui_config_splash_company_logo">@drawable/ic_logo_bottom</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--DialogTheme，用于将Activity作为Dialog的主题-->
    <style name="DialogTheme" parent="XUITheme.Phone">
        <!--设置dialog的背景，此处为系统给定的透明值-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>　　　　　
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置Activity出现方式-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--图片选择的主题，注意每一项都不能少-->
    <style name="XUIPictureStyle" parent="XUITheme.Phone">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">?attr/colorAccent</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">?attr/colorAccent</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture_statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture_leftBack_icon">@drawable/xui_ic_navigation_back_white</item>
        <!--title图标文字的padding-->
        <item name="picture_title_action_padding">?attr/xui_actionbar_side_text_padding</item>
        <!--标题下拉箭头-->
        <item name="picture_arrow_down_icon">@drawable/pic_arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture_arrow_up_icon">@drawable/pic_arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture_title_textColor">?attr/xui_actionbar_text_color</item>
        <!--标题栏右边文字-->
        <item name="picture_right_textColor">?attr/xui_actionbar_text_color</item>
        <!--标题文字大小-->
        <item name="picture_title_textSize">?attr/xui_actionbar_title_text_size</item>
        <!--标题栏右边文字大小-->
        <item name="picture_right_textSize">?attr/xui_actionbar_action_text_size</item>
        <!--标题文字是否加粗-->
        <item name="picture_title_text_bold">false</item>
        <!--标题栏右边文字是否加粗-->
        <item name="picture_right_text_bold">false</item>
        <!--图片列表勾选样式-->
        <item name="picture_checked_style">@drawable/xui_icon_checkbox</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture_style_checkNumMode">false</item>
        <!--选择图片样式0/9-->
        <item name="picture_style_numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture_bottom_bg">@color/color_f4</item>
        <!--图片列表预览文字颜色-->
        <item name="picture_preview_textColor">@color/picture_tab_text_color</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture_complete_textColor">@color/picture_tab_text_color</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture_num_style">@drawable/picture_dot_oval</item>
        <!--预览界面标题栏背景色-->
        <item name="picture_ac_preview_title_bg">?attr/colorAccent</item>
        <!--预览界面标题文字颜色-->
        <item name="picture_ac_preview_title_textColor">?attr/xui_actionbar_text_color</item>
        <!--预览界面标题文字大小-->
        <item name="picture_ac_preview_title_textSize">?attr/xui_actionbar_title_text_size</item>
        <!--预览界面标题文字是否加粗-->
        <item name="picture_ac_preview_title_text_bold">false</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture_ac_preview_complete_textColor">@color/picture_tab_text_color</item>
        <!--预览界面底部背景色-->
        <item name="picture_ac_preview_bottom_bg">@color/color_f4</item>
        <!--预览界面返回箭头-->
        <item name="picture_preview_leftBack_icon">@drawable/xui_ic_navigation_back_white</item>
        <!--裁剪页面标题背景色-->
        <item name="picture_crop_toolbar_bg">?attr/colorAccent</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture_crop_status_color">?attr/colorAccent</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture_crop_title_color">?attr/xui_actionbar_text_color</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture_folder_checked_dot">@drawable/picture_dot_oval</item>
    </style>

</resources>
