  <select id="getUser"
          resultType="com.chh.healthy.backend.pojo.entity.User">
        select
        p.id,
        p.username,
        p.nickname,
        p.sex,
        p.status,
        p.created_by,
        p.created_time,
        p.updated_by,
        p.updated_time,
        p.version,
        p.email,
        p.icon
        from h_user AS p where p.id=#{id}
    </select>
    <select id="getPictureList"
            resultType="com.chh.healthy.backend.pojo.entity.InvitationPicture">
        select * from h_invitation_picture AS p where p.invitation_id = #{id}
    </select>

  <select id="queryInvitation" resultMap="BaseResultMap">
        SELECT
        t1.*
        FROM
        h_invitation AS t1
        <where>
          <if test="query.title != null">
            AND t1.title LIKE concat("%",#{query.title},"%")
          </if>
            <if test="query.createdBy != null">
                AND t1.created_by = #{query.createdBy}
            </if>
            AND t1.status != 2
        </where>
        ORDER BY
        t1.created_time DESC,
        t1.id DESC
  </select>
    <select id="queryByAdmin" resultMap="BaseResultMap">
        SELECT
        t1.*
        FROM
        h_invitation AS t1
        <where>
            <if test="query.title != null">
                AND t1.title LIKE concat("%",#{query.title},"%")
            </if>
            <if test="query.queryId != null">
                AND t1.id = #{query.queryId}
            </if>
            <if test="query.createdBy != null">
                AND t1.created_by = #{query.createdBy}
            </if>
        </where>
        ORDER BY
        t1.created_time DESC,
        t1.id DESC
    </select>

    <select id="queryInvitationCollect" resultMap="BaseResultMap">
        SELECT
        t1.*,
        t2.invitation_id,
        t2.created_by,
        t2.updated_time,
        t2.id
        FROM
        h_invitation AS t1
        LEFT JOIN h_collect AS t2 ON t1.id = t2.invitation_id
        <where>
            <if test="query.collectBy != null">
                AND t2.created_by = #{query.collectBy}
            </if>
        </where>
        ORDER BY
        t2.updated_time DESC,
        t2.id DESC
    </select>

    <select id="queryInvitationById" resultMap="BaseResultMap">
        SELECT
        t1.*,
        t2.id AS picture_id,
        t2.url,
        t2.invitation_id
        FROM
        h_invitation AS t1
        LEFT JOIN h_invitation_picture AS t2 ON t2.invitation_id = t1.id
        <where>
            <if test="query != null">
                AND t1.id = #{query}
            </if>
        </where>
        ORDER BY
        t1.updated_time DESC,
        t1.id DESC
    </select>
</mapper>